<h1><%= t('view.management_screeen') %></h1>

<table>
  <tr>
    <th><%= t('view.management_screen_name') %></th>
    <th><%= t('view.management_screen_authority') %></th>
  </tr>  

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    
    <td>
      <%if user.admin == true %>
        管理者
      <% else %>
        一般ユーザー
      <%end%>
    </td>
    
    <td><%= link_to t('view.edit'), edit_admin_user_path(user.id) %></td>
    <td><%= link_to t('view.delete'), admin_user_path(user.id), method: :delete %></td>
  </tr>
<% end %>

</table>

<%= link_to t('view.user_new'), new_admin_user_path %>