<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.user.name %></td>
    <td><%= blog.created_at %></td>

  <%if user_signed_in? %>
    <% if current_user.admin == true %>  
      <td><%= link_to "編集", edit_blog_path(blog.id) %></td>
      <td><%= link_to '削除', blog_path(blog.id), method: :delete %></td>
    <% end %>
  <% end %>  
  </tr>
<% end %>
</table>

<%if user_signed_in? %>
  <% if current_user.admin == true %>
    <%= link_to '新しくブログを投稿する', new_blog_path %>
  <% end %>
<% end %>