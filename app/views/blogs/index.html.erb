<h1><%= t('view.blog_view') %></h1>

<%if user_signed_in? %>
  <% if current_user.admin == true %>
    <%= link_to t('view.blog_post') , new_blog_path %>
  <% end %>
<% end %>

<table>
  <tr>
    <th><%= t('view.title') %></th>
    <th><%= t('view.content') %></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.user.name %></td>
    <td><%= blog.created_at %></td>

  <%if user_signed_in? %>
    <% if current_user.admin == true %>  
      <td><%= link_to t('view.edit'), edit_blog_path(blog.id) %></td>
      <td><%= link_to t('view.delete'), blog_path(blog.id), method: :delete %></td>
    <% end %>
  <% end %>  
  </tr>
<% end %>
</table>